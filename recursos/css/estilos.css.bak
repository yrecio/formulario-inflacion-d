html{
	font-size: 16px;
	font-family: "Open Sans";
}

/* ---------- header ----------*/

body{
	width: 100%;
	margin: none;
	position: absolute;
}

header{
	text-align: center;
	margin: 1rem;
	font-size: 0.8rem;
}

#logo{
	height: 5rem;
	width: auto;
}

main{
	width: 100%;
}

form{
	width: 100%;
	display: inline-flex;
	justify-content: center;
	flex-wrap: wrap;
}

label{
	font-weight: bold;
	font-size: 1.5rem;
}

.slider:hover {
	border: 0.1rem #efefef solid;
}

.boton-respuesta {
	background: white;
	font-size: 1.2rem;
	border: 0.1rem #d3d3d3 solid;
	padding: 0.4rem;
	margin: 1rem;
	border-radius: 0.2rem;
}

.producto{
	border: 0.2rem white solid;
	width: 100%;
	height: 12rem;
	text-align: center;
	padding: 0.2rem;
	background-color: #f8f7f7;
}

.slider {
	-webkit-appearance: none;
	width: 60%;
	height: 0.8rem;
	background: #d3d3d3;
	-webkit-transition: .2s;
	transition: opacity .2s;
	margin: 1rem;
}

.slider::-webkit-slider-thumb{
  -webkit-appearance: none;
  appearance: none;
  width: 1rem;
  height: 1rem;
  background-color: #cb9595;
  border-radius: 100%;
  cursor: pointer;
  bottom: 0; 
}

.slider::-webkit-slider-thumb:hover{
  width: 1.5rem;
  height: 1.5rem;
  background-color: #CC0000;
}

.mensaje{
	margin-bottom: 0.5rem;
	height: 2.rem;
	width: 100%;
}

.inputText{
	margin-top: 0.2rem;
}

.mensajeCalculadora{
	display: none;
}

.consulta{
	color: white;
	background-color: #cc0000;
	width: 17%;
	cursor: pointer;
	margin-left: 1rem;
}

.consulta:hover{
	background-color: #cb9595;
}

.bloqueconsulta{
	display: flex;
	justify-content: center;
}

#desplegable{
	margin-top: 2rem;
	margin-bottom: 2rem;
	width: 100%;
	height: 2.2rem;
	display: flex;
	justify-content: center;
}

.pestana{
	width: 100%;
	height: 100%;
	background-color: #cc0000;
	color: white;
	text-align: center;
	border: 0.001rem white solid;
	padding: 0.5rem 0rem 1rem 0rem;
	cursor: pointer;
	transition: 100ms linear;
	font-size: 1.2 rem;
}

.pestana:hover{
	background-color: #cb9595;
}

#previa{
	width: 100%;
}

@media (max-width: 600px){
	html{
		font-size: 18px;
	}
	label{
	font-weight: bold;
	font-size: 1rem;
}
	#previa{
		display: none;
	}
	
	.consulta{
	width: 20%;
	}
	
	
	.producto{
		padding-top: 2rem;
	}
	
	label{
		font-size: 1.2rem;
	}
	
}